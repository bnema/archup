# Starship prompt - use centralized theme symlink
if command -v starship &> /dev/null; then
  export STARSHIP_CONFIG="$HOME/.local/share/archup/themes/current/starship.toml"
  eval "$(starship init bash)"
fi

# Zoxide (smarter cd)
if command -v zoxide &> /dev/null; then
  eval "$(zoxide init bash)"
fi

# FZF fuzzy finder
if command -v fzf &> /dev/null; then
  eval "$(fzf --bash)"
fi
